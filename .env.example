# Docker Image Configuration
IMAGE_TAG=v1.0.0

# Database Configuration
DB_ROOT_PASSWORD=your_secure_root_password
DB_NAME=church_attendance
DB_USER=church_user
DB_PASSWORD=your_secure_db_password

# Server Configuration
SERVER_PORT=3001
CLIENT_URL=http://localhost:3000
# BASE_URL is used for OAuth redirect URIs (e.g., Elvanto integration)
# For local dev with Cloudflare Tunnel, set this to your tunnel URL:
# BASE_URL=https://your-tunnel-url.yourdomain.com
# For local dev without tunnel, leave as default (http://localhost)
BASE_URL=http://localhost

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_here
JWT_EXPIRE=24h

# OTC (One-Time Code) Configuration
OTC_EXPIRE_MINUTES=10
OTC_RESEND_COOLDOWN_SECONDS=60

# Email Configuration
EMAIL_FROM=hello@letmypeoplegrow.com.au
EMAIL_FROM_NAME="Let My People Grow"
EMAIL_DOMAIN=letmypeoplegrow.com.au
CHURCH_NAME="Let My People Grow"

# Client Configuration
CLIENT_PORT=3000

# Nginx Configuration
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Optional: External API Keys (these should be set in server/.env)
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=your_twilio_phone_number
# BREVO_API_KEY=your_brevo_api_key

# Elvanto Integration (optional - can also be configured in Settings â†’ Integrations)
# ELVANTO_CLIENT_ID=your_elvanto_client_id
# ELVANTO_CLIENT_SECRET=your_elvanto_client_secret
# ELVANTO_REDIRECT_URI=https://your-tunnel-url.yourdomain.com/api/integrations/elvanto/callback

